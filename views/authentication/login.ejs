<%- include('partials/header') -%>
<%- include('partials/menu') -%>
<%- include('partials/image-slider') -%>


<div class="container-md content">
  <div class="row">
    <div class="col-lg-9 border border-top-0 border-bottom-0 border-left-0" style="min-height: 100vh; padding: 15px;">
      <%- messages('message', locals) %>
      <div class="border p-3">
        <h3>Вход</h3>
        <form class="log-reg-form" action="/users/login" method="post">
          <div class="form-group">
            <label>Потребителско име:</label>
            <input class="form-control" type="text" name="username">
          </div>
          <div class="form-group">
            <label>Парола:</label>
            <input class="form-control" type="password" name="password">
          </div>
          <div class="form-group">
            <label class="form-check-label">
              <input type="checkbox" name="remember"> Запомни ме
            </label>
          </div>
          <button class="btn btn-lg btn-primary font-weight-bold pr-4 pl-4" type="submit">ВХОД</button>
        </form>
        <div class="p-3">
          <a href="/users/register" class="side-buttons" style="float: left;">Регистрация</a>
          <a href="#" class="side-buttons" style="float: right;">Забравена парола?</a>
        </div>
      </div>
    </div>
    <%- include('partials/side-content') -%>
  </div>
</div>
<br>
<%- include('partials/footer') -%>
