<%- include('partials/header'); -%>
<%- include('partials/menu'); -%>
<%- include('partials/image-slider'); -%>

<div class="container-md content">
  <div class="row">
    <div class="col-lg-9 border border-top-0 border-bottom-0 border-left-0" style="min-height: 100vh; padding: 15px;">
      <form class="form-group" action="/game/edit/<%= gameId %>" method="post" enctype="multipart/form-data">
        <table class="table table-responsive table-bordered project-description">
          <tr>
            <td width="33%" rowspan="7">
              <div style="position: relative">
                <div class="edit-img-btn">
                  <input type="file" name="file" id="getFile" style="display: none" onchange="loadFile(event)">
                  <a onclick="document.getElementById('getFile').click()">▲</a>
                </div>
                <img class="output-single-project" name="outputImage" src="/images/uploads/<%= image_file %>" id="output">
              </div>
              <script>
                var loadFile = function(event) {
                var output = document.getElementById('output');
                  output.src = URL.createObjectURL(event.target.files[0]);
                };
              </script>
            </td>
          </tr>
          <tr>
            <th class="align-middle">Заглавие</th>
            <td class="align-middle"><input class="form-control form-control-sm" type="text" name="title" value="<%= title %>"></td>
          </tr>
          <tr>
            <th class="align-middle">Жанр</th>
            <td class="align-middle">
              <% genres.forEach(function(currentGenre){ %>
              <select name="genres">
                <option value="<%= currentGenre %>" selected hidden><%= currentGenre %></option>
                <% genresEnum.forEach(function(everyGenre) { %>
                  <option value="<%= everyGenre %>"><%= everyGenre %></option>
                <% }) %>
              </select>
              <% })  %>
            </td>
          </tr>
          <tr>
            <th class="align-middle">Компания</th>
            <td class="align-middle">
              <input class="form-control form-control-sm" type="text" name="company" value="<%= company %>">
            </td>
          </tr>
          <tr>
            <th class="align-middle">Издател</th>
            <td class="align-middle">
              <input class="form-control form-control-sm" type="text" name="publisher" value="<%= publisher %>">
            </td>
          </tr>
          <tr>
            <th class="align-middle">Година</th>
            <td class="align-middle">
              <input class="form-control form-control-sm" type="text" name="year" value="<%= year %>">
            </td>
          </tr>
          <tr>
            <th class="align-middle">Платформа</th>
            <td class="align-middle">
              <input class="form-control form-control-sm" type="text" name="platform" value="<%=platform %>">
            </td>
          </tr>
          <tr>
            <th colspan="3" style="text-align: center">Изисквания</th>
          </tr>
          <tr>
            <td colspan="3">
              <textarea class="form-control" rows="10" type="text" name="requirements" value="">
                <%= requirements %>">
              </textarea>
            </td>
          </tr>
          <tr>
            <th colspan="3" style="text-align: center">Резюме</th>
          </tr>
          <tr>
            <td colspan="3">
              <textarea class="form-control" rows="10" type="text" name="summary" value="">
                <%= summary %>
              </textarea>
            </td>
          </tr>
        </table>
        <br>
        <input class="form-control" type="text" name="trailer" value="<%= trailer %>">
        <iframe style="border: none" src="<%= trailer %>" width="100%" height="450px"></iframe>
        <br>
        <div class="text-center">
          <button class="btn btn-secondary" type="submit">Потвърди</button>
          <button class="btn btn-secondary" type="button" onclick="location.replace('/game/<%= gameId %>')">Отмяна</button>
        </div>
      </form>
    </div>
    <%- include('partials/side-content') %>
  </div>
</div>
<br>
<%- include('partials/footer'); -%>
