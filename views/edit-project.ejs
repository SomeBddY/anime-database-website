<%- include('partials/header'); -%>
<%- include('partials/menu'); -%>
<%- include('partials/image-slider'); -%>

    <div class="container-md content">
      <div class="row">
        <div class="col-lg-9 border border-top-0 border-bottom-0 border-left-0" style="min-height: 100vh; padding: 15px;">
          <form class="form-group" action="/projects/edit/<%= projectId %>" method="post" enctype="multipart/form-data">
            <table class="project-description table">
              <tr>
                <th rowspan="11">
                  <div style="position: relative">
                    <div class="edit-img-btn">
                      <input type="file" name="file" id="getFile" style="display: none" onchange="loadFile(event)">
                      <a onclick="document.getElementById('getFile').click()">▲</a>
                    </div>
                    <img class="output-single-project" src="/images/uploads/<%= image_file %>" id="output">
                  </div>
                  <script>
                    var loadFile = function(event) {
                      var output = document.getElementById('output');
                      output.src = URL.createObjectURL(event.target.files[0]);
                    };
                  </script>
                </th>
              </tr>
              <tr>
                <td>Заглавие</td>
                <td><input class="form-control form-control-sm" type="text" name="title" value="<%= title %>"></td>
              </tr>
              <tr>
                <td>Жанр</td>
                <td> <input class="form-control form-control-sm" type="text" name="genre" value="<%= genre %>"></td>
              </tr>
              <tr>
                <td>Тип</td>
                <td><input class="form-control form-control-sm" type="text" name="format" value="<%= format %>"></td>
              </tr>
              <tr>
                <td>Епизоди</td>
                <td><input class="form-control form-control-sm" type="text" name="episodes" value="<%= episodes %>"></td>
              </tr>
              <tr>
                <td>Година</td>
                <td><input class="form-control form-control-sm" type="text" name="year" value="<%= year %>"></td>
              </tr>
              <tr>
                <td>Времетраене</td>
                <td><input class="form-control form-control-sm" type="text" name="duration" value="<%= duration %>"></td>
              </tr>
              <tr>
                <td>Държава</td>
                <td><input class="form-control form-control-sm" type="text" name="state" value="<%= state %>"></td>
              </tr>
              <tr>
                <td>Студио</td>
                <td><input class="form-control form-control-sm" type="text" name="studio" value="<%= studio %>"></td>
              </tr>
              <tr>
                <td>Продукция</td>
                <td><input class="form-control form-control-sm" type="text" name="producer" value="<%= producer %>"></td>
              </tr>
              <tr>
                <td>Рейтинг</td>
                <td style="border-bottom: none">
                    <% if(ratings.length === 0){ %>
                      <span>n/a</span>
                    <% } else { %>
                      <% let sumVotes = 0 %>
                      <% ratings.forEach(function(vote) { %>
                        <% sumVotes += vote.rating %>
                      <% }) %>
                      <span><%= (sumVotes/count).toFixed(2) %></span>
                      <span>(<%= count %>)</span>
                    <% } %>
                </td>
              </tr>
              <tr>
                <td colspan="3" style="text-align: center">Резюме</td>
              </tr>
              <tr>
                <td colspan="3"><textarea class="form-control" rows="10" type="text" name="summary" value=""><%= summary %></textarea></td>
              </tr>
            </table>
            <br>
            <input class="form-control" type="text" name="trailer" value="<%= trailer %>">
            <iframe style="border: none" src="<%= trailer %>" width="100%" height="450px"></iframe>
            <div class="text-center">
              <button class="btn btn-secondary" type="submit">Потвърди</button>
              <button class="btn btn-secondary" type="button" onclick="location.replace('/projects/<%= projectId %>')">Отмяна</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-lg-3">

      </div>
    </div>
    <br>
<%- include('partials/footer'); -%>
